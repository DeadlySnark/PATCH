	CALL TRAIN_MESSAGE
	; NTR対応口上実行
	CALL NTR_KOJO_MESSAGE_COM_K4_351_1
	IF 1 == RESULT
		; 戻り値が1であれば、非NTR対応口上を実行
		TRYCALL KOJO_MESSAGE_COM_K4_351_1
	ENDIF
RETURN RESULT

@NTR_KOJO_MESSAGE_COM_K4_351_1
	#DIM 奴隷
	#DIM RET_VAL

	奴隷 = TARGET
	IF CFLAG:同行
		;同行するとき
		RET_VAL = 1
	ELSE
		RET_VAL = 0
		;離れるとき
		IF CFLAG:奴隷:現在位置 == FLAG:訪問者の現在位置
			; 訪問者が同じ場所にいる
			IF TALENT:奴隷:公衆便所 && TALENT:奴隷:親愛
				PRINTFORML 「・・」
				PRINTFORML %NTR_NAME(0)%の舐めるような視線を感じた%CALLNAME:奴隷%は不安そうな表情を浮かべ%CALLNAME:MASTER%の傍らで足を止めた。
			ELSEIF TALENT:奴隷:公衆便所
				PRINTFORML 「あら、%NTR_KARE()%がいるわ。またお仕事の話かしら」
				PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ%NTR_KARE()%の方に歩いていった。
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られ) 
				PRINTFORML 「あら、%NTR_KARE()%がいるわ。それじゃあね」
				PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ頬を染めながら%NTR_KARE()%の方に歩いていった。
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られ寸前)
				PRINTFORML 「あら」
				PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ頬を染めながら%NTR_KARE()%の方に歩いていった。
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られそう)
				IF TALENT:奴隷:恋慕
					IF TALENT:奴隷:浮気公認
						PRINTFORML 「あら。%NTR_KARE()%が呼んでいたの？」
						PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ頬を染めながら%NTR_KARE()%の方に歩いていった。
					ELSE
						PRINTFORML 「・・」
						PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から一歩離れさりげなく%NTR_NAME(0)%の傍らで足をとめた。
					ENDIF
				ELSE
					PRINTFORML 「あら」
					PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ%NTR_KARE()%の方に歩いていった。
				ENDIF
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_主人より高い) 
				IF TALENT:奴隷:恋慕
					IF TALENT:奴隷:浮気公認
						PRINTFORML 「あら。%NTR_KARE()%が呼んでいたの？」
						PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ%NTR_KARE()%の方に歩いていった。
					ELSE
						PRINTFORML 「・・」
						PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から一歩離れさりげなく%NTR_NAME(0)%の近くで足を止めた。
					ENDIF
				ELSE
					PRINTFORML 「あら」
					PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%から一歩離れさりげなく%NTR_NAME(0)%の近くで足を止めた。
				ENDIF
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_うふふする程度)
				IF TALENT:奴隷:恋慕 
					IF IS_NTR_SOFT()
						PRINTFORML 「・・」
						PRINTFORML %NTR_NAME(0)%の視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%と%NTR_NAME(0)%の間で足をとめた。
					ELSE
						PRINTFORML 「・・」
						PRINTFORML %NTR_NAME(0)%の舐めるような視線を感じた%CALLNAME:奴隷%だったが、特に不快そうな顔は見せず
						PRINTFORML %CALLNAME:MASTER%と%NTR_NAME(0)%の間で足をとめた。
					ENDIF
				ELSE
					RET_VAL = 1
				ENDIF
			ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_奉仕する程度)
				IF TALENT:奴隷:恋慕 && !IS_NTR_SOFT()
					PRINTFORML 「・・」
					PRINTFORML %NTR_NAME(0)%の舐めるような視線を感じた%CALLNAME:奴隷%はいささか警戒しつつ
					PRINTFORML %CALLNAME:MASTER%と%NTR_NAME(0)%の間で足をとめた。
				ELSE
					RET_VAL = 1
				ENDIF
			ELSE
				IF TALENT:奴隷:恋慕 && !IS_NTR_SOFT()
					PRINTFORML 「・・」
					PRINTFORML %NTR_NAME(0)%の舐めるような視線を感じた%CALLNAME:奴隷%は%CALLNAME:MASTER%の傍らで足を止めた。
				ELSE
					RET_VAL = 1
				ENDIF
			ENDIF
		ELSE
			RET_VAL = 1
		ENDIF
	ENDIF
