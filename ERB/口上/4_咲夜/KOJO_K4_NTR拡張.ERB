			IF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られ寸前) || NTR_CHK_FAVORABLY(奴隷, FAV_寝取られそう)
				PRINTDATAL
					DATAFORM 「・・鍵なしでは、この程度ね」
					DATAFORM 「・・これ以上は駄目よ。鍵がいるわ」
					DATAFORM 「・・これ以上は・・わかっているわね？」
				ENDDATA
			ELSE
				PRINTDATAL
					DATAFORM 「・・ええ、これくらいなら・・ふふっ、鍵もいらないものね？」
					DATAFORM 「・・ふふっ、これ以上は、鍵がいるわよ？」
					DATAFORM 「・・これくらいなら構わないわ」
				ENDDATA
			ENDIF
		ELSE
			PRINTDATAL
				DATAFORM 「駄目よ」
				DATAFORM 「おやめなさい」
				DATAFORM 「・・やめて」
			ENDDATA
		ENDIF

	ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_寝取り返し寸前) || NTR_CHK_FAVORABLY(奴隷, FAV_寝取り返し中) 

