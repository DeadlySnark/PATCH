@COM95
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET
;射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手）
TCVAR:PLAYER:2 = 0

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
;強度
TCVAR:PLAYER:4 = 250

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 5
DOWNBASE:気力 += 50
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:気力 += 50

SOURCE:PLAYER:快Ｃ = 100
SOURCE:PLAYER:快Ｂ = 100
SOURCE:PLAYER:情愛 = 150
SOURCE:情愛 = 100
SOURCE:性行動 = 300
SOURCE:達成 = 150
SOURCE:征服 = 300
SOURCE:不潔 = 100
SOURCE:反感 = 100

;上のほうで計算した汚れデータ
SOURCE:不潔 = GET_STAINCOUNT(PLAYER, 部位_Ｖ, TARGET) / 3 * 10 + 60

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 400

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;対象の手⇔調教者のＶの汚れが移動
STAIN:手 |= STAIN:PLAYER:Ｖ
STAIN:PLAYER:Ｖ |= STAIN:手

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 7
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 7
ENDIF

STR:0 = Be Caressed

RETURN 1

@CAN_COM95(ARG)
SKIPDISP ARG
PRINTL Be Caressed
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
TFLAG:実行値 = 0
TFLAG:実行値表示用フラグ = 0

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += ABL:欲望 * 1
	PRINT Lust
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;ABL:奉仕精神
IF ABL:奉仕精神
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += ABL:奉仕精神 * 4
	PRINT Servitude
	PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 2,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;ABL:サドっ気
IF ABL:サドっ気
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += ABL:サドっ気 * 4
	PRINT Sadism
	PRINTV 'LV,ABL:サドっ気,'(,ABL:サドっ気 * 2,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

IF MARK:快楽刻印
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += MARK:快楽刻印 * 1
	PRINT Pleasure Mark
	PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,5)
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += GETPALAMLV(PALAM:欲情,5) * 1
	PRINT Desire
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;恥じらい
IF TALENT:羞恥心 > 0
	PRINT  - 
	TFLAG:実行値 -= 1
	PRINT Shy
	PRINTV '(,1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;汚臭鈍感
IF TALENT:汚臭耐性 > 0
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += 1
	PRINT Resistant To Smell
	PRINTV '(,1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;汚臭敏感
IF TALENT:汚臭耐性 < 0
	PRINT  - 
	TFLAG:実行値 -= 3
	PRINT Smell Sensitive
	PRINTV '(,3,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;献身的
IF TALENT:献身的
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += 6
	PRINT Devoted
	PRINTV '(,6,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;快感の否定（淫乱、娼婦で無効）
IF TALENT:快感応答 < 0 && !TALENT:淫乱
	PRINT  - 
	TFLAG:実行値 -= 1
	PRINT Denies Pleasure
	PRINTV '(,1,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;男嫌い（恋慕、親愛で無効）
IF TALENT:性別嗜好 & 1 && !(TALENT:PLAYER:2 & 1) && (!TALENT:恋慕 || PLAYER != MASTER)
	PRINT  - 
	TFLAG:実行値 -= 12
	PRINT Man Hater
	PRINTV '(,12,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;恋慕
IF TALENT:恋慕 && ASSIPLAY == 0
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += 5
	PRINT Love
	PRINTV '(,5,')
	TFLAG:実行値表示用フラグ = 5
ENDIF

;親愛
IF TALENT:恋慕 > 1 && ASSIPLAY == 0
	SIF TFLAG:実行値表示用フラグ
		PRINT  + 
	TFLAG:実行値 += 5
	PRINT Deep Affection
	PRINTV '(,5,')
	TFLAG:実行値表示用フラグ = 5
ENDIF

;手での愛撫なので汚れがそれほど影響しないってことに
LOCAL = GET_STAINCOUNT(PLAYER, 部位_Ｖ, TARGET) / 3
;汚れあり
IF LOCAL
	PRINT  - 
	TFLAG:実行値 -= LOCAL
	PRINT Dirty
	;汚臭鈍感
	IF TALENT:汚臭耐性 > 0
		PRINT , Resistant To Smell
	ELSEIF TALENT:汚臭耐性 < 0
		PRINT , Smell Sensitive
	ENDIF
	PRINTV '(,LOCAL,')
	TFLAG:実行値表示用フラグ = 1
ENDIF

;合計を表示(12以上で実行)
PRINT  = 
PRINTV TFLAG:実行値

LOCAL = 12
SIF TFLAG:実行値 < LOCAL
	PRINT  < 
SIF TFLAG:実行値 == LOCAL
	PRINT  = 
SIF TFLAG:実行値 > LOCAL
	PRINT  > 
PRINT Required Value 
PRINTV LOCAL

WAIT
SKIPDISP 0
;実行できない
SIF TFLAG:実行値 < LOCAL
	RETURN 0
RETURN 1


