@SYSTEM_TITLE
DRAWLINE
ALIGNMENT CENTER
PRINTFORML %GAMEBASE_TITLE%
LOCALS = {GAMEBASE_VERSION}
SUBSTRING LOCALS, 1, 1
PRINT Ver.
;PRINTFORML {GAMEBASE_VERSION / 10000}.%RESULTS% 
PRINTFORML 0.0%TOSTR(GAMEBASE_VERSION,"#,####")%
;PRINTFORML 0.{GAMEBASE_VERSION / 10000}%RESULTS%
RESETCOLOR
SETCOLOR 0x666666
PRINTFORML %GAMEBASE_AUTHOR%
PRINTL Modded&Translated by Pedy
RESETCOLOR
SIF STRLENS(GAMEBASE_YEAR) > 0
	PRINTFORML (%GAMEBASE_YEAR%)
;PRINTL
DRAWLINE
PRINTBUTTON " 0[New Game]", 0
PRINTL 
PRINTBUTTON " 1[Load Game]", 1
PRINTL 
PRINTL 
ALIGNMENT LEFT
$INPUT_LOOP
INPUT
CLEARLINE 1
IF RESULT == 0
	DRAWLINE
	RESETDATA
	ADDCHARA 0
	BEGIN FIRST
ELSEIF RESULT == 1
	CALL LOADGAME_EX
	RESTART
ENDIF
GOTO INPUT_LOOP