;-------------------------------------------------
;お風呂場プレイ
;特殊なコマンド
;-------------------------------------------------
@COM187
;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:お風呂場プレイ == 1
	TEQUIP:お風呂場プレイ = 0
	;シャワーも外す
	TEQUIP:シャワー = 0
	RETURN 1
ELSE
	TEQUIP:お風呂場プレイ = 1
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 30

SOURCE:恐怖 = 100
SOURCE:露出 = 200
SOURCE:逸脱 = 50
SOURCE:反感 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 50
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装備時に汚れをリセットする（風呂に来て汚れたままもどうかということで）
STAIN:口 = 汚れ_なし
STAIN:手 = 汚れ_なし
STAIN:Ｐ = 汚れ_ペニス
STAIN:Ｖ = 汚れ_愛液
STAIN:Ａ = 汚れ_アナル
STAIN:Ｂ = 汚れ_なし
STAIN:膣内 = 汚れ_なし

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM187(ARG)
;お風呂場プレイ

DOWNBASE:ARG:体力 += 10
DOWNBASE:ARG:気力 += 10

SOURCE:ARG:恭順 += 100
SOURCE:ARG:反感 += 50

RETURN 1

